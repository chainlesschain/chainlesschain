# ChainlessChain 生产环境配置

# ==================== 代码签名 ====================

# Windows 代码签名证书
# 从 CA 机构购买代码签名证书后，将证书文件路径和密码填入下方
# 警告: 不要将真实的证书密码提交到 Git 仓库
WINDOWS_CERTIFICATE_FILE=/path/to/your/certificate.pfx
WINDOWS_CERTIFICATE_PASSWORD=your-certificate-password

# macOS 代码签名 (需要 Apple Developer 账号)
APPLE_ID=your-apple-id@example.com
APPLE_ID_PASSWORD=@keychain:AC_PASSWORD
APPLE_TEAM_ID=XXXXXXXXXX

# ==================== 数据库加密 ====================

# 数据库加密密钥 (建议使用强随机密钥)
# 生成方法: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
DB_ENCRYPTION_KEY=

# ==================== 后端服务 ====================

# 后端 API 地址
API_BASE_URL=https://api.chainlesschain.com
PROJECT_SERVICE_URL=https://api.chainlesschain.com/project
AI_SERVICE_URL=https://api.chainlesschain.com/ai

# ==================== LLM 服务 ====================

# Ollama 配置
OLLAMA_HOST=http://localhost:11434

# 向量数据库配置
QDRANT_HOST=http://localhost:6333

# 云端 LLM API Keys (可选)
DASHSCOPE_API_KEY=
ZHIPUAI_API_KEY=
QIANFAN_API_KEY=

# ==================== P2P 网络 ====================

# Bootstrap 节点
P2P_BOOTSTRAP_NODES=/ip4/bootstrap1.chainlesschain.com/tcp/4001/p2p/QmXXXXXX

# STUN/TURN 服务器
STUN_SERVER=stun:stun.chainlesschain.com:3478
TURN_SERVER=turn:turn.chainlesschain.com:3478
TURN_USERNAME=
TURN_PASSWORD=

# ==================== 安全配置 ====================

# 启用沙箱模式 (建议启用,但需要测试兼容性)
ENABLE_SANDBOX=false

# 启用 CSP (内容安全策略)
ENABLE_CSP=true

# 审计日志级别 (info, warn, error)
AUDIT_LOG_LEVEL=info

# ==================== 其他配置 ====================

# 应用环境
NODE_ENV=production

# 日志级别
LOG_LEVEL=info

# 自动更新服务器
UPDATE_SERVER_URL=https://updates.chainlesschain.com
