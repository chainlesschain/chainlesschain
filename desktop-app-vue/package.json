{
  "name": "chainlesschain-desktop-vue",
  "version": "0.1.0",
  "description": "ChainlessChain桌面应用 - 基于Electron和Vue3的个人AI知识库",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:electron": "wait-on http://localhost:5173 && npm run build:main && cross-env NODE_ENV=development electron .",
    "dev:renderer": "vite",
    "start": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "node scripts/build-main.js",
    "build:renderer": "vite build",
    "test:db": "node scripts/test-database.js",
    "test:ukey": "node scripts/test-ukey.js",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "make:win": "npm run build && electron-forge make --platform=win32",
    "publish": "electron-forge publish"
  },
  "keywords": [
    "electron",
    "vue3",
    "knowledge-base",
    "ai",
    "privacy"
  ],
  "author": "ChainlessChain Team",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "axios": "^1.6.5",
    "dotenv": "^16.4.1",
    "isomorphic-git": "^1.25.4",
    "koffi": "^2.8.10",
    "lodash.debounce": "^4.0.8",
    "markdown-it": "^14.0.0",
    "node-forge": "^1.3.1",
    "sql.js": "^1.13.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "ant-design-vue": "^4.1.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "pinia": "^2.1.7",
    "png-to-ico": "^3.0.1",
    "vite": "^7.2.7",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "wait-on": "^9.0.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "ChainlessChain",
        "executableName": "chainlesschain",
        "icon": "build/icon",
        "extraResource": [
          "../node_modules/sql.js/dist/sql-wasm.wasm"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "chainlesschain"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
