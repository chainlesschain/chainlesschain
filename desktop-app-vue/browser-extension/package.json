{
  "name": "chainlesschain-web-clipper",
  "version": "2.0.0",
  "description": "ChainlessChain Web Clipper - Multi-browser extension for clipping web content",
  "scripts": {
    "build:chrome": "webpack --env browser=chrome",
    "build:firefox": "webpack --env browser=firefox",
    "build:safari": "webpack --env browser=safari",
    "build:all": "npm run build:chrome && npm run build:firefox && npm run build:safari",
    "watch:chrome": "webpack --env browser=chrome --watch",
    "watch:firefox": "webpack --env browser=firefox --watch",
    "clean": "rm -rf build/*",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "node test-runner.js",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:quick": "node test-runner.js",
    "generate:icons": "node scripts/generate-icons-canvas.js",
    "prebuild:chrome": "npm run generate:icons",
    "prebuild:firefox": "npm run generate:icons",
    "prebuild:safari": "npm run generate:icons"
  },
  "keywords": [
    "browser-extension",
    "web-clipper",
    "knowledge-base"
  ],
  "author": "ChainlessChain Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^29.7.0",
    "copy-webpack-plugin": "^12.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^23.11.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "fabric": "^6.5.2"
  }
}
