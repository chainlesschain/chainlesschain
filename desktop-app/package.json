{
  "name": "chainlesschain-desktop",
  "version": "0.1.0",
  "description": "ChainlessChain桌面应用 - 基于Electron的个人AI知识库",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:electron": "wait-on http://localhost:5173 && npm run build:preload && npm run build:main && cross-env NODE_ENV=development electron .",
    "dev:renderer": "vite",
    "start": "npm run build:preload && npm run build:main && cross-env NODE_ENV=development electron .",
    "build": "npm run build:preload && npm run build:main && npm run build:renderer",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:mac": "npm run build && electron-forge make --platform=darwin",
    "make:linux": "npm run build && electron-forge make --platform=linux",
    "make:win": "npm run build && electron-forge make --platform=win32",
    "publish": "electron-forge publish",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "knowledge-base",
    "ai",
    "privacy"
  ],
  "author": "ChainlessChain Team",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "axios": "^1.6.5",
    "dotenv": "^16.4.1",
    "isomorphic-git": "^1.25.4",
    "lodash.debounce": "^4.0.8",
    "markdown-it": "^14.0.0",
    "node-forge": "^1.3.1",
    "react-markdown": "^9.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-appimage": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "@types/lodash.debounce": "^4.0.9",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.11.5",
    "@types/node-forge": "^1.3.11",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "antd": "^5.13.2",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3",
    "typescript": "^5.3.3",
    "vite": "^7.2.7",
    "wait-on": "^9.0.3",
    "zustand": "^4.5.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "ChainlessChain",
        "executableName": "chainlesschain",
        "icon": "resources/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "chainlesschain"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "platforms": [
            "darwin"
          ],
          "config": {
            "name": "ChainlessChain"
          }
        },
        {
          "name": "@electron-forge/maker-appimage",
          "platforms": [
            "linux"
          ],
          "config": {}
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
