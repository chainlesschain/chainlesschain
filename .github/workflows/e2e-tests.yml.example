# E2E测试 GitHub Actions工作流
# 这是一个示例配置，展示如何在CI/CD中运行E2E测试

name: E2E Tests

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]
  workflow_dispatch: # 允许手动触发

jobs:
  # 健康检查任务
  health-check:
    runs-on: windows-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          cache: 'npm'
          cache-dependency-path: desktop-app-vue/package-lock.json

      - name: Install dependencies
        run: |
          cd desktop-app-vue
          npm ci

      - name: Build main process
        run: |
          cd desktop-app-vue
          npm run build:main

      - name: Run health check
        run: |
          cd desktop-app-vue
          node tests/e2e/health-check.js

  # 分批运行E2E测试（并行）
  e2e-tests:
    needs: health-check
    runs-on: windows-latest
    strategy:
      fail-fast: false # 一个失败不影响其他
      matrix:
        batch:
          - name: 'Core-1'
            modules: 'knowledge social'
          - name: 'Core-2'
            modules: 'project settings'
          - name: 'Advanced-1'
            modules: 'monitoring trading'
          - name: 'Advanced-2'
            modules: 'enterprise devtools'
          - name: 'Content'
            modules: 'content plugins multimedia'

    name: E2E Tests - ${{ matrix.batch.name }}

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          cache: 'npm'
          cache-dependency-path: desktop-app-vue/package-lock.json

      - name: Install dependencies
        run: |
          cd desktop-app-vue
          npm ci

      - name: Build main process
        run: |
          cd desktop-app-vue
          npm run build:main

      - name: Run E2E tests for ${{ matrix.batch.name }}
        run: |
          cd desktop-app-vue
          $modules = "${{ matrix.batch.modules }}" -split ' '
          foreach ($module in $modules) {
            Write-Host "Testing module: $module"
            npm run test:e2e -- tests/e2e/$module/
          }
        shell: pwsh
        timeout-minutes: 30

      - name: Upload test results
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: test-results-${{ matrix.batch.name }}
          path: desktop-app-vue/test-results/
          retention-days: 30

      - name: Upload screenshots on failure
        if: failure()
        uses: actions/upload-artifact@v3
        with:
          name: screenshots-${{ matrix.batch.name }}
          path: desktop-app-vue/test-results/**/*.png
          retention-days: 7

  # 生成报告任务
  generate-report:
    needs: e2e-tests
    if: always()
    runs-on: windows-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Download all test results
        uses: actions/download-artifact@v3
        with:
          path: test-results/

      - name: Generate HTML report
        run: |
          cd desktop-app-vue
          node tests/e2e/generate-report.js

      - name: Upload HTML report
        uses: actions/upload-artifact@v3
        with:
          name: html-report
          path: desktop-app-vue/tests/e2e/reports/*.html
          retention-days: 30

      - name: Comment PR with results
        if: github.event_name == 'pull_request'
        uses: actions/github-script@v6
        with:
          script: |
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: '✅ E2E测试完成！查看[测试报告](https://github.com/${{ github.repository }}/actions/runs/${{ github.run_id }})'
            })

  # 快速验证任务（仅PR）
  quick-validation:
    if: github.event_name == 'pull_request'
    runs-on: windows-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          cache: 'npm'
          cache-dependency-path: desktop-app-vue/package-lock.json

      - name: Install dependencies
        run: |
          cd desktop-app-vue
          npm ci

      - name: Build main process
        run: |
          cd desktop-app-vue
          npm run build:main

      - name: Run quick validation
        run: |
          cd desktop-app-vue
          node tests/e2e/quick-validation.js
        timeout-minutes: 45

      - name: Upload validation results
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: quick-validation-results
          path: desktop-app-vue/test-results/
          retention-days: 7
