{
  "name": "chainlesschain",
  "version": "0.37.3",
  "description": "基于U盾和SIMKey的个人移动AI管理系统",
  "private": true,
  "workspaces": [
    "desktop-app",
    "desktop-app-vue",
    "backend/services"
  ],
  "scripts": {
    "dev:desktop": "npm run dev --workspace=desktop-app",
    "dev:desktop-vue": "npm run dev --workspace=desktop-app-vue",
    "build:desktop": "npm run build --workspace=desktop-app",
    "build:desktop-vue": "npm run build --workspace=desktop-app-vue",
    "signaling:start": "cd signaling-server && npm start",
    "signaling:dev": "cd signaling-server && npm run dev",
    "signaling:docker": "docker-compose up -d signaling-server",
    "test:jest": "jest",
    "test:jest:project": "jest tests/unit/project",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "test:vitest:coverage": "vitest run --coverage -c config/vitest.config.js",
    "test:coverage": "npm run test:jest:coverage && npm run test:vitest:coverage",
    "test:coverage:open": "open coverage/jest/index.html && open coverage/vitest/index.html",
    "test:performance": "vitest run tests/performance/benchmark.test.js",
    "test:all": "npm run test:jest && npm run test:vitest:coverage && npm run test:performance",
    "test:e2e": "playwright test",
    "test:e2e:project": "playwright test tests/e2e/project-management.e2e.test.ts",
    "test:e2e:workflow": "playwright test tests/e2e/complete-workflow.e2e.test.ts",
    "test:e2e:knowledge": "playwright test tests/e2e/knowledge-base.e2e.test.ts",
    "test:e2e:social": "playwright test tests/e2e/social-features.e2e.test.ts",
    "test:e2e:creation": "playwright test tests/e2e/project-creation-workflow.e2e.test.ts",
    "test:e2e:ai-flow": "playwright test tests/e2e/ai-intelligent-creation.e2e.test.ts",
    "test:e2e:chat": "playwright test tests/e2e/ai-chat.e2e.test.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "dev:android": "cd mobile-app/android && ./gradlew installDebug",
    "docker:up": "cd backend/docker && docker-compose up -d",
    "docker:down": "cd backend/docker && docker-compose down",
    "docker:logs": "cd backend/docker && docker-compose logs -f",
    "init:db": "node scripts/init-database.js",
    "setup": "node scripts/setup.js",
    "test": "npm test --workspaces",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rimraf desktop-app/dist desktop-app/out node_modules/.cache",
    "prepare": "husky"
  },
  "keywords": [
    "decentralized",
    "ai",
    "knowledge-base",
    "privacy",
    "u-key",
    "sim-key",
    "blockchain"
  ],
  "author": "ChainlessChain Team",
  "license": "MIT",
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@electron/rebuild": "^4.0.2",
    "@faker-js/faker": "^10.2.0",
    "@playwright/test": "^1.57.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "^29.7.0",
    "electron": "^39.2.7",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourname/chainlesschain.git"
  },
  "bugs": {
    "url": "https://github.com/yourname/chainlesschain/issues"
  },
  "homepage": "https://www.chainlesschain.com",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,json,md}": [
      "node scripts/security-check.js"
    ]
  },
  "dependencies": {
    "claude": "^0.1.1"
  },
  "overrides": {
    "cookie": "0.7.2",
    "diff": "8.0.3"
  }
}
