{
  "name": "chainlesschain",
  "version": "0.1.0",
  "description": "基于U盾和SIMKey的个人移动AI管理系统",
  "private": true,
  "workspaces": [
    "desktop-app",
    "desktop-app-vue",
    "backend/services"
  ],
  "scripts": {
    "dev:desktop": "npm run dev --workspace=desktop-app",
    "dev:desktop-vue": "npm run dev --workspace=desktop-app-vue",
    "build:desktop": "npm run build --workspace=desktop-app",
    "build:desktop-vue": "npm run build --workspace=desktop-app-vue",
    "test:jest": "jest",
    "test:jest:project": "jest tests/unit/project",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "test:vitest:coverage": "vitest run --coverage",
    "test:coverage": "npm run test:jest:coverage && npm run test:vitest:coverage",
    "test:coverage:open": "open coverage/jest/index.html && open coverage/vitest/index.html",
    "test:performance": "vitest run tests/performance/benchmark.test.js",
    "test:all": "npm run test:jest && npm run test:vitest:coverage && npm run test:performance",
    "dev:android": "cd mobile-app/android && ./gradlew installDebug",
    "docker:up": "cd backend/docker && docker-compose up -d",
    "docker:down": "cd backend/docker && docker-compose down",
    "docker:logs": "cd backend/docker && docker-compose logs -f",
    "init:db": "node scripts/init-database.js",
    "setup": "node scripts/setup.js",
    "test": "npm test --workspaces",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rimraf desktop-app/dist desktop-app/out node_modules/.cache"
  },
  "keywords": [
    "decentralized",
    "ai",
    "knowledge-base",
    "privacy",
    "u-key",
    "sim-key",
    "blockchain"
  ],
  "author": "ChainlessChain Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourname/chainlesschain.git"
  },
  "bugs": {
    "url": "https://github.com/yourname/chainlesschain/issues"
  },
  "homepage": "https://www.chainlesschain.com"
}
